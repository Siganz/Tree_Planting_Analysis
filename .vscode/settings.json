{
  // Use the venvâ€™s interpreter for IntelliSense, linting, debugging
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",

  // Let the LS find your src/ package
  "python.analysis.extraPaths": ["${workspaceFolder}/src"],

  // Load .env (for activating the venv in terminals)
  "python.envFile": "${workspaceFolder}/.env",

  // Enable pytest and point it at your tests folder
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": ["tests"],

  // Debugger / terminals automatically see the right PATH
  "terminal.integrated.env.linux": {
    "VIRTUAL_ENV": "${workspaceFolder}/.venv",
    "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
  },
  "terminal.integrated.env.windows": {
    "VIRTUAL_ENV": "${workspaceFolder}\\.venv",
    "PATH": "${workspaceFolder}\\.venv\\Scripts;${env:PATH}"
  },
  "terminal.integrated.env.osx": {
    "VIRTUAL_ENV": "${workspaceFolder}/.venv",
    "PATH": "${workspaceFolder}/.venv/bin:${env:PATH}"
  }
}
